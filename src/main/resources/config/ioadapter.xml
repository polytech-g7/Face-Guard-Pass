<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd">

    <int:channel id="channelEmptyPhoto"/>

    <int:inbound-channel-adapter id="inPhotoAdapter" channel="channelEmptyPhoto" method="sendPhoto">
        <bean class="org.g7.robbo.opd.fgs.camera.CameraAdapter"/>
    </int:inbound-channel-adapter>

    <int:outbound-channel-adapter id="outPhotoAdapter" channel="channelEmptyPhoto" method="getPhoto">
        <bean class="org.g7.robbo.opd.fgs.faceRecognition.FaceRecognitionAdapter"/>
    </int:outbound-channel-adapter>


    <int:channel id="channelFace"/>

    <int:inbound-channel-adapter id="inFaceAdapter" channel="channelEmptyPhoto" method="sendFace">
        <bean class="org.g7.robbo.opd.fgs.faceRecognition.FaceRecognitionAdapter"/>
        <int:poller fixed-rate="500"/>
    </int:inbound-channel-adapter>

    <int:outbound-channel-adapter id="outFaceAdapter" channel="channelEmptyPhoto" method="getFace">
        <bean class="org.g7.robbo.opd.fgs.faceInit.FaceInitAdapter"/>
    </int:outbound-channel-adapter>

</beans>